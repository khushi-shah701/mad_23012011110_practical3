<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_register">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/guni_pink_logo"
        app:layout_constraintTop_toTopOf="parent"
         />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_register"
        app:cardElevation="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/text_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Full Name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:inputType="text"
                app:layout_constraintBaseline_toBaselineOf="@id/text_fname"
                app:layout_constraintEnd_toStartOf="@id/text_fname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_pno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Phone Number"
                app:layout_constraintStart_toStartOf="@id/text_fname"
                app:layout_constraintTop_toTopOf="@id/text_fname" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                app:layout_constraintBaseline_toBaselineOf="@id/text_pno"
                app:layout_constraintEnd_toStartOf="@id/text_pno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="City"
                app:layout_constraintStart_toStartOf="@id/text_pno"
                app:layout_constraintTop_toTopOf="@id/text_pno" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                app:layout_constraintBaseline_toBaselineOf="@id/text_city"
                app:layout_constraintEnd_toStartOf="@id/text_city"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Email"
                app:layout_constraintStart_toStartOf="@id/text_city"
                app:layout_constraintTop_toTopOf="@id/text_city" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                app:layout_constraintBaseline_toBaselineOf="@id/text_email"
                app:layout_constraintEnd_toStartOf="@id/text_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_pawd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Password"
                app:layout_constraintStart_toStartOf="@id/text_email"
                app:layout_constraintTop_toTopOf="@id/text_email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                app:layout_constraintBaseline_toBaselineOf="@id/text_pawd"
                app:layout_constraintEnd_toStartOf="@id/text_pawd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_cpawd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Confirm Password"
                app:layout_constraintStart_toStartOf="@id/text_pawd"
                app:layout_constraintTop_toTopOf="@id/text_pawd" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                app:layout_constraintBaseline_toBaselineOf="@id/text_cpawd"
                app:layout_constraintEnd_toStartOf="@id/text_cpawd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:translationZ="30dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toBottomOf="@id/card_register"
        app:layout_constraintStart_toStartOf="@id/card_register"
        app:layout_constraintEnd_toEndOf="@id/card_register"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Do you have an account?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerButton" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Login"
        android:textColor="#EF0AA6"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintBaseline_toBaselineOf="@id/text1" />

</androidx.constraintlayout.widget.ConstraintLayout>
